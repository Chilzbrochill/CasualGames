<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vietvg_bgphone"
    tools:context=".FlipCard">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayoutCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/vietvg_gridcardboder"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="monospace"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vietvg_medal" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="202dp"
        android:layout_height="38dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="96dp"
        android:progressDrawable="@drawable/vietvg_progressbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/frameTaskbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/vietvg_bordertaskbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgTitleLevel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/vietvg_titlelv1" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="340dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/setting" />

        <ImageView
            android:id="@+id/imageJelly"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/jelly" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/vietvg_winPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:srcCompat="@drawable/vietvg_winpopup"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="65dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="270dp"
            app:srcCompat="@drawable/vietvg_medal" />

        <TextView
            android:id="@+id/txtWinPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="270dp"
            android:text="200"
            android:textColor="#b87333"
            android:textSize="49sp" />

        <ImageView
            android:id="@+id/btnNextlevel"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="390dp"
            app:srcCompat="@drawable/check" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/vietvg_losePopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:srcCompat="@drawable/vietvg_losepopup"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="65dp" />

        <ImageView
            android:id="@+id/btnRestart"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="330dp"
            app:srcCompat="@drawable/restart" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/vietvg_settingPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/imgSettingLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:srcCompat="@drawable/vietvg_settingpopup"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="65dp" />

        <ImageView
            android:id="@+id/btnQuitToLevel"
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="380dp"
            app:srcCompat="@drawable/quit" />

        <ImageView
            android:id="@+id/btnMusic"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="285dp"
            app:srcCompat="@drawable/on" />

        <ImageView
            android:id="@+id/btnOffSetting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="355dp"
            android:layout_marginTop="205dp"
            app:srcCompat="@drawable/x_button" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>