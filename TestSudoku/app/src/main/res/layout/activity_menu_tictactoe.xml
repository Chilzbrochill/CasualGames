<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu_tictactoe">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/amaranth"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAI"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="152dp"
        android:text="Chơi với máy"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnHuman"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:text="Chơi với người"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAI" />

    <LinearLayout
        android:id="@+id/hidden_layout"
        android:layout_width="346dp"
        android:layout_height="279dp"
        android:background="@drawable/border"
        android:elevation="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/ibtnClose"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_gravity="top|end"
            android:backgroundTint="#FAFAFA"
            app:srcCompat="@drawable/baseline_close_24" />

        <Button
            android:id="@+id/btn3x3"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/acme"
            android:text="3 x 3"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn5x5"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/acme"
            android:text="5 x 5"
            android:textAlignment="center"
            android:textSize="30sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>